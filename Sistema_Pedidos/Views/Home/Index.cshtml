@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Register</h1>
    <div class="form-box">
        <form class="form" action="/Product/Cadastrar" method="post">
            <p>
            <div class="form__group field">
                <input type="input" class="form__field" placeholder="Name" required="" name="Product">
                <label for="name" class="form__label">Product Name</label>
            </div>
            </p>
            <p>
            <div class="form__group field">
                <input type="input" class="form__field" placeholder="Quantity" required="" name="Quantity">
                <label for="name" class="form__label">Quantity</label>
            </div>
            </p>
            <p>
            <div class="form__group field">
                <input type="input" class="form__field" placeholder="Total Value" required="" name="totalValue">
                <label for="name" class="form__label">Total Value</label>
            </div>
            </p>
            <div class="btn-cta">
                <button>
                    <div class="svg-wrapper-1">
                        <div class="svg-wrapper">
                            <svg height="24" width="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0 0h24v24H0z" fill="none"></path>
                                <path
                                    d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"
                                    fill="currentColor"></path>
                            </svg>
                        </div>
                    </div>
                    <span>Send</span>
                </button>
            </div>
        </form>
    </div>
</div>
